{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}

    <div class="container">
        <section class="text-center">

            <h1><a class="trick-title" href="{{ path('trick_index') }}">{{ trick.name| capitalize}}</a></h1>

                <img src="https://picsum.photos/800/365" alt="img card"/>

                {% for image in trick  %}
                    <img alt="{{ image.name }}"src="{{ image.trick }}"/>
                {% endfor %}

            <div class="d-flex flex-row offset-2">
                <div class="p-4 m-2"><span class="badge bg-secondary">{{ trick.category.name|capitalize }}</span></div>
                <div class="p-4 m-2"><p>Ecrit le <small>{{ trick.createdAt ? trick.createdAt|date('d-m-Y') : '' }}</small></p></div>
            </div>

            <h3> {{ trick.description|capitalize }}</h3>

            <p>écrit par: {{ trick.author.username|capitalize }}</p>

        </section>
            <div class="show-button">
                <div class="p-2"><a href="{{ path('trick_edit', {'id': trick.id}) }}" class="btn btn-warning">Modifier</a></div>

                {{ include('trick/_delete_form.html.twig') }}

                <div class="p-2"><a href="{{ path('trick_index') }}" class="btn btn-outline-dark">Retour à la liste</a></div>
            </div>

    <section class="comment bg-light p-3">
        <div class="container offset col-6">
        <h3>Commentaires</h3>
        {% for comment in trick.comments %}
            <div class="container">
                <div class="row">
                    <p class="col-4"> {{ comment.author }}</p>
                    <p class="col-2"> {{ comment.createdAt|date('d-m-Y') }}</p>
                    <p class="col-4">{{ comment.content}}</p>
                    <p class="col-2">
                        {% if comment.author.username is defined %}
                    <div class="icon offset-10 col-2 p-3">
                        <i class="fas fa-pencil-alt"></i>
                        <a href="{{path('comment_delete', {'id':comment.id}) }}"
                           type="submit"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </div>
                    {% endif %}
                    </p>
                </div>
            </div>
        {% else %}
            <p>Pas de commentaire. Sois le premier à réagir!</p>
        {% endfor %}

        <h4>Ajouter un commentaire</h4>

            {{ form_start(formComment) }}

                {{ form_row(formComment.content) }}
                {{ form_row(formComment.author) }}

                <button type="submit" class="btn btn-success">Ajouter</button>

            {{ form_end(formComment) }}

        </div>

    </section>


    </div>

{% endblock %}
