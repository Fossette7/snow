{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard: User List{% endblock %}

{% block body %}

<div class="container mt-3 mb-4 " style="background-color: white">
    <h1>Liste des utilisateurs</h1>
    <div class="col-lg-9 mt-4 mt-lg-0">
        <div class="row">
            <div class="col-md-12">
                <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
                    <a href="{{ path('register') }}" type="button" class="btn btn-primary">Cr√©er un nouveau compte utilisateur</a>
                    <table class="table manage-candidates-top mb-0">
                        <thead>
                        <tr>
                            <th>Les rideurs</th>
                            <th class="text-center">Actif</th>
                            <th class="action text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr class="rideurs-list">
                            <td class="title">
                                <div class="thumb">
                                    {# <img class="img-fluid" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt=""> #}
                                    <img class=" img-fluid avatar-img" src="{{ asset('uploads/avatars/') ~ user.avatar }}" alt="avatar picture"/>
                                </div>
                                <div class="rideurs-list-details">
                                    <div class="rideurs-list-info">
                                        <div class="rideurs-list-title">
                                            <h5 class="mb-0">{{ user.username }}</h5>
                                        </div>
                                        <div class="rideurs-list-option">
                                            <ul class="list-unstyled">
                                                <li><i class="fas fa-envelope pr-1"></i>{{ user.email }}</li>
                                                <li><i class="fas fa-clock pr-1"></i>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="rideurs-list-favourite-time text-center">
                                <a class="rideurs-list-favourite order-2 text-danger" href="#"><i class="fas fa-flag"></i></a>
                                <span class="rideurs-list-time order-1">{{ user.active ? 'Yes' : 'No' }}</span>
                            </td>
                            <td>
                                <ul class="list-unstyled mb-0 d-flex justify-content-end">
                                    <li><a href="{{ path('user_show', {'id': user.id}) }}" class="text-primary" data-toggle="tooltip" title="" data-original-title="view"><i class="far fa-eye"></i></a></li>
                                    <li><a href="{{ path('user_edit', {'id': user.id}) }}" class="text-info" data-toggle="tooltip" title="" data-original-title="edit"><i class="fas fa-pencil-alt"></i></a></li>
                                    <li><a href="#" class="text-danger" data-toggle="tooltip" title="" data-original-title="delete"><i class="far fa-trash-alt"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="text-center mt-3 mt-sm-3">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item disabled"> <span class="page-link">Prev</span> </li>
                            <li class="page-item active" aria-current="page"><span class="page-link">1 </span> <span class="sr-only">(current)</span></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">...</a></li>
                            <li class="page-item"><a class="page-link" href="#">25</a></li>
                            <li class="page-item"> <a class="page-link" href="#">Next</a> </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
