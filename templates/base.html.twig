<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Site pour les passionnÃ©s de snowbord">
  <title>{% block title %}Bienvenue!{% endblock %}</title>
  <!-- Custom styles for this template -->
  <link rel="icon" type="image/png" href="{{ asset('dist/picture/logo.ico.png') }}">
  {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('dist/bootstrap/bootstrap5.css') }}"/>
    <link rel="stylesheet" href="{{ asset('dist/fontawesome/css/all.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('dist/css/main.css') }}"/>
  {% endblock %}

  {% block javascripts %}
    <script src="{{ asset('dist/bootstrap/bootstrap5.js') }}" type="text/javascript"></script>
  {% endblock %}
</head>
<body>

<header>

  <nav class="navbar navbar-expand-lg navbar-dark blue-background">
    <div class="container">
      <a href="{{ path('home') }}"><img src="{{ asset('dist/picture/logo.ico.png') }}" class="navbar-brand"></a>
      <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav">
          <a href="{{ path('home') }}" class="nav-item nav-link active">Accueil</a>
          <a href="{{ path('trick_index') }}" class="nav-item nav-link" tabindex="-1">Tricks</a>
        </div>
        <div class="navbar-nav ms-auto">
          <button type="button" class="btn btn-light-blue"><i class="fas fa fa-user"></i> Connexion</button>
        </div>
      </div>
    </div>
  </nav>
</header>


{% block body %}{% endblock %}

{% for message in app.flashes('success') %}
  <div class="alert alert-success">
      {{ message }}
  </div>
{% endfor %}
{% for message in app.flashes('notice') %}
  <div class="alert alert-notice">
      {{ message }}
  </div>
{% endfor %}

<footer class="mt-5">
  <div class="container">
      <div class="d-flex offset-10 col-lg-2 offset-md-9 col-md-3 col-sm-4 offset-2 col-xs-7 mt-3 pt-3">
        <div class="mx-1"><a href="#"><i class="fab fa-github fa-lg fa-2x" aria-hidden="true"></i></a></div>
        <div class="mx-1"><a href="#"><i class="fab  fa-facebook fa-lg fa-2x"></i></a></div>
        <div class="mx-1"><a href="#"><i class="fab fa-instagram fa-lg fa-2x" aria-hidden="true"></i></a></div>
      </div>


    <div class="footer-copyright text-center py-3">
      <p class="mb-0 small">&copy; {{ 'now'|date('Y') }} Snowtricks project. All right reserved.
        <a href="#"> Reybeka.com</a> </p>
    </div>
  </div>
</footer>

</body>
</html>
